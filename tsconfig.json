{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "target": "ES2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",

    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
  },

  "include": ["src/**/*"]
}
